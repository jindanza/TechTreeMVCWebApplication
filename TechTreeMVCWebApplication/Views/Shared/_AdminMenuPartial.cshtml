@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore
@using TechTreeMVCWebApplication.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User) && await UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "admin"))
{
    <li class="nav-item dropdown show">
        <a class="dropdown-toggle nav-link text-dark" href="#" data-toggle="dropdown"><i class="fa-solid fa-layer-group mr-2"></i>Admin</a>
        <div class="dropdown-menu">
            <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index"><i class="fa-solid fa-table mr-2"></i>Categories</a>
            <a class="dropdown-item" asp-area="Admin" asp-controller="UsersToCategory" asp-action="Index"><i class="fa-solid fa-table-cells-row-unlock mr-2"></i>Users to Categories</a>
            <div class="dropdown-divider"></div>
            <a asp-area="Admin" asp-controller="MediaType" asp-action="Index" class="dropdown-item"><i class="fa-solid fa-photo-film mr-2"></i>Media Types</a>
        </div>
    </li>
}
else if (!SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark" href="#Courses"><i class="fa-solid fa-book mr-2"></i>Courses</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" href="#ContactUs"><i class="fa-solid fa-address-book mr-2"></i>Contact Us</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" href="#AboutUs"><i class="fa-solid fa-users-between-lines mr-2"></i>About Us</a>
    </li>
}