@model IEnumerable<TechTreeMVCWebApplication.Entities.Category>

@if (Model.Count() > 0)
{
    <div class="row mt-3">
        @foreach (Category item in Model)
        {
            <div class="col-md-3 mt-3">
                <a class="RegisterLink text-dark" data-categoryId="@item.Id">
                    <div class="card">
                        <img src="@item.ThumbnailImagePath" alt="@item.Title" class="img-thumbnail" />
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">@item.Description</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}