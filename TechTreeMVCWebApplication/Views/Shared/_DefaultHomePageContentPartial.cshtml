
@model IEnumerable<TechTreeMVCWebApplication.Entities.Category>

@* Hero Section *@
<div class="hero section">
    <img src="~/Image/HeroImage.jpg" class="img-fluid" />
    <div class="hero-heading">
        <h2 class="hero-heading-text">Learn Software Engineering at <strong>Daily Course</strong></h2>
        <a id="HeroRegisterButton" class="btn btn-outline-info btn-lg text-light hero-register-button" data-toggle="modal" data-target="#UserRegistrationModal">Register</a>
    </div>
</div>

<hr class="section-divider"/>

@* Courses Section *@
<div id="Courses" class="courses section">
    <h3 class="section-header">Courses</h3>
    @{
        const int itemsPerRow = 4;

        var count = Model.Count() / itemsPerRow;
        var catList = new List<Category>();
    }
    @for (int i = 0; i <= count; i++)
    {
        catList = Model.Skip(i * itemsPerRow).Take(itemsPerRow).ToList();

        <partial name="_DisplayCardRowPartial" model="catList"/>
    }
</div>

<hr class="section-divider" />

@* Contact Us Section *@
<div id="ContactUs" class="contact-us section">
    <h3 class="col-md-5 section-header">Contact Us</h3>
    <div class="col-md-5">
        Email us any questions or inquiries or call 123-456-7890. We would be happy to answer your questions and set up a meeting with you.
    </div>
    <div class="mt-3">
        <form>
            <input type="hidden" />
            <div class="form-group">
                <label for="Name" class="control-label">Name: </label>
                <input id="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Email" class="control-label">Email: </label>
                <input id="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Subject" class="control-label">Subject: </label>
                <input id="Subject" class="form-control" />
            </div>
            <div class="form-group">
                <label for="MessageBody" class="control-label">Message: </label>
                <input id="MessageBody" class="form-control" />
            </div>
            <div class="form-group d-flex">
                <input type="button" value="Send Email" class="btn btn-outline-info ml-auto" />
            </div>
        </form>
    </div>
</div>

<hr class="section-divider" />

@* About Us Section *@
<div id="AboutUs" class="about-us section">
    <h3 class="col-md-5 section-header">About Us</h3>
    <div class="mt-3 mb-5">
        <div class="col-md-5">
            <p>
                <strong>Daily Course</strong> provides articles and courses on programming topics. We started in 2024 and continue to provide high quality Tech content to our members.
            </p>
        </div>
    </div>
</div>