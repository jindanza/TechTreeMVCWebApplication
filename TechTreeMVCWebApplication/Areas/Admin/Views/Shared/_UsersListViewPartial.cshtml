@model TechTreeMVCWebApplication.Areas.Admin.Models.UsersCategoryListModel
@using TechTreeMVCWebApplication.Comparers

<table class="table table-hover">
    <thead>
        <tr>
            <th></th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Users != null)
        {
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td style="text-align: center">
                        @if (Model.UsersSelected != null && Model.UsersSelected.Contains(user, new CompareUsers()))
                        {
                            <input type="checkbox" id="UsersSelected" name="UsersSelected" value="@user.Id" checked class="form-check-input" />
                        }
                        else
                        {
                            <input type="checkbox" id="UsersSelected" name="UsersSelected" value="@user.Id" class="form-check-input" />
                        }
                    </td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                </tr>
            }
        }
    </tbody>
</table>